<% include header.ejs %>
<link rel="stylesheet" href="/css/server.css">

<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>登陆</legend>
  </fieldset>
   
  <form class="layui-form" action="/admin/auth">
    
    <div class="layui-form-item">
      <label class="layui-form-label"><%= __("please input username")%></label>
      <div class="layui-input-block">
        <input type="text" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">
      </div>
    </div>
    <div class="layui-form-item">
      <label class="layui-form-label"><%= __("please input password")%></label>
      <div class="layui-input-block">
        <input type="text" name="password" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">
      </div>
    </div>
    
    
    <div class="layui-form-item">
      <div class="layui-input-block">
          <h1 style="color:red"> <%= req.session.error %></h1>
        <button class="layui-btn" lay-submit="" lay-filter="demo1">立即提交</button>
        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
      </div>
    </div>
  </form>
<script src="/layui/layui.js"></script>
<script>
    //一般直接写在一个js文件中
    layui.use(['layer', 'form','jquery'], function(){
      var layer = layui.layer
              ,form = layui.form
              ,$ = layui.jquery;
  
      $(".admin-login").addClass("layui-this");
  
    });
  </script> 
